<article class="block" width="960" height="400">
    <div class="chart"
         title="<%= title %>"
         data-type="column"
         data-categories="<%= data.collect { |h| h[0]  }.to_json %>"
         data-series-data="<%= data.collect { |h| h[1]  }.to_json %>"
         data-tooltip="<%= tooltip %>"
         data-x-title="<%= x_title %>"
         data-y-title="<%= y_title %>"
         data-no-pointer="<%= no_pointer rescue nil %>"
    ></div>
    <% if (description rescue false) %>
        <p class="box"><%= description.html_safe %></p>
    <% end %>
</article>
